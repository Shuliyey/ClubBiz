<!DOCTYPE html>
<html>
<head>
<title>ClubBiz</title>
<%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>
<%= javascript_include_tag "application", "data-turbolinks-track" => true %>
<%= csrf_meta_tags %>
<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
</head>
<body>

	<nav class="navbar navbar-inverse" role="navigation">
	  <div class="container-fluid">
	    <!-- Brand and toggle get grouped for better mobile display -->
	    <div class="navbar-header">
	      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
	        <span class="sr-only">Toggle navigation</span>
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>
	      </button>
	      <!-- 
	      <div class="navbar-brand" style='width:50px; border-style: solid; border-width: 2px; border-color: white; margin-right: 10px; margin-left: auto; cursor: pointer'>
	      	<div style="height: 10px; width:30px; border-style: solid; border-width: 2px; border-color: white; float:left; position: relative; margin-left: auto; margin-right: auto; margin-bottom: 3px; margin-top: -9px;"></div>
	      	<div style="height: 10px; width:30px; border-style: solid; border-width: 2px; border-color: white; float:left; position: relative; margin-left: auto; margin-right: auto; margin-bottom: 3px"></div>
	      	<div style="height: 10px; width:30px; border-style: solid; border-width: 2px; border-color: white; float:left; position: relative; margin-left: auto; margin-right: auto; margin-bottom: 3px"></div>
	      </div>
	      -->
	      <%= link_to "ClubBiz", events_path, class: 'navbar-brand' %>
	      <% if club_signed_in? %> <p class="navbar-text">Clubs & Socities View</p> <% end %>
	    </div>

	    <!-- Collect the nav links, forms, and other content for toggling -->
	    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

	      <!-- User account log in register etc -->	
	      <ul class="nav navbar-nav navbar-right">
	        <% if student_signed_in? %>
				<li><%= link_to current_student.full_name, edit_student_registration_path, class: 'navbar-link' %></li>
				<li><%= link_to "Log Out", destroy_student_session_path, class: 'navbar-link', method: :delete %></li>

		    <% elsif club_signed_in? %>
				<li><%= link_to current_club.full_name, edit_club_registration_path, class: 'navbar-link' %></li>
				<li><%= link_to "Log Out", destroy_club_session_path, class: 'navbar-link', method: :delete %></li>

			<% else %>
				<li><%= link_to "Register", new_student_registration_path, class: 'navbar-link' %></li>
				<li><%= link_to "Log in", new_student_session_path, class: 'navbar-link' %></li>
			<% end %>
	      </ul>
	      <!-- User account log in register etc -->	

	      <!-- Search Bar -->
		  <form class="navbar-form -navbar-right" role="search" action="search" method='get'>
	          <div class="input-group">
	              <input id="search-area" type="search" class="form-control" placeholder="Search for clubs or events..." name="q">
	              <div class="input-group-btn">  
	                  <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>  
	              </div>  
	          </div>
	      </form>
	      <!-- Search Bar -->

	    </div><!-- /.navbar-collapse -->
	  </div><!-- /.container-fluid -->
	</nav>	

	<div class="container">
		<%= yield %>
	</div>

<br />

<div class="container" align="center">
<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>
</div>

</body>
</html>