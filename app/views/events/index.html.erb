<div align="center"> <h1>Listing events</h1> <br /> </div>

<div class="row">
<% @events.each do |event| %>
    <div class="col-md-3">
      <%= link_to event do %>
      <div class="card-small" align="center"> 
        <p> 
          <%= event.name %> <br />
          <%= event.when %> <br />
          Event Location <br />
        </p>
      </div>
      <% end %>
    </div>
<% end %>
</div>


