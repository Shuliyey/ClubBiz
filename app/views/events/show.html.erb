<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @event.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @event.description %>
</p>

<p>
  <strong>When:</strong>
  <%= @event.when %>
</p>

<p>
  <strong>Maxtickets:</strong>
  <%= @event.maxTickets %>
</p>

<p>
  <strong>Ticketprice:</strong>
  <%= @event.ticketPrice %>
</p>

