  <strong>Memberdiscount:</strong>
  <%= @event.memberDiscount %>
</p>

<p> 

<div class="btn-group">
  <%= link_to raw("<i class=\"glyphicon glyphicon-arrow-left\"> Back</i>"), 
          events_path, 
          class: "btn btn-inverse",
