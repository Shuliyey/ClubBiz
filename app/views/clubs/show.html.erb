<div class="card">

<p id="notice"><%= notice %></p>

<h2><%= @club.full_name %></h2>

<p>
  <strong>Description:</strong>
  <%= @club.description %>
</p>

<br />

<div class="btn-group">
<%= link_to raw("<i class=\"glyphicon glyphicon-arrow-left\"> Back</i>"),
    events_path,
    class: "btn btn-inverse"%>
  <% if club_signed_in? and (@club_id == current_club.id) %>
  <%= link_to raw("<i class=\"glyphicon glyphicon-pencil\"> Edit</i>"), edit_club_registration_path, class: "btn btn-inverse" %>
  <% end %>

	<% if student_signed_in? %>
		<% if !current_student.return_likes_club(current_student.id, @club.id) %>
			<%= link_to raw("<i class=\"glyphicon glyphicon-thumbs-up\"> Like </i>"), clubs_students_path(:club_id => @club.id, :student_id => current_student.id), :method => :post, :class => "btn btn-inverse"%>
	  	<% else %>
	  		<% like = current_student.clubs.where(:id => @club.id) %>
			<%= link_to raw("<i class=\"glyphicon glyphicon-thumbs-up\"> Liked </i>"), 
	  			clubs_student_path(:club_id => @club.id, :student_id => current_student.id), :method => :delete, :class => "btn btn-inverse-toggled"%>

	  	<% end %>
  <% end %>
</div>

</div>

